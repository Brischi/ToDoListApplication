<UserControl x:Class="ToDoList.View.Home"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ToDoList.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="450">

    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!--Title-->
        <TextBlock x:Name="Überschrift"   
            Style="{StaticResource TextTitle}">  
            <Run Language="de-de" 
            Text="TO DO LIST" />
        </TextBlock>

        <!--Listbox mit offenen Tasks-->
        <ListBox x:Name="TodoListBox" 
            Grid.Row="1" 
            Grid.RowSpan="4"    
            Margin="12,0,6,35"
            Template="{StaticResource ListBoxTemplate}"
            ItemTemplate="{StaticResource TodoItemTemplate}"  
            MouseDoubleClick="TodoListBox_MouseDoubleClick">
        </ListBox>

        <!--Listbox mit erledigten Tasks-->
        <ListBox x:Name="TodoListBox_Done" 
            Template="{StaticResource ListBoxTemplate}"
            ItemTemplate="{StaticResource TodoItemTemplate}" 
            Margin="6,0,12,35"
            Grid.Row="1" 
            Grid.RowSpan="4" 
            Grid.Column="1"  
           MouseDoubleClick="TodoListBox_Done_MouseDoubleClick">
        </ListBox>

        <!--Eingabefeld für neue Tasks-->
        <TextBox x:Name="NewTodoTextBox" 
            TextChanged="NewTodoTextBox_TextChanged" 
            Style="{StaticResource MyTextBoxStyle}" 
            Grid.Row="4" 
            Grid.RowSpan="2"
            Margin="12,65,6,10">
            <TextBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </TextBox.RenderTransform>
        </TextBox>

        <!--Delete-Button-->
        <Button  x:Name="DeleteTodoButton"
            Content="delete" 
            Click="DeleteTodo_Click"  
            Style="{StaticResource MyButtonStyle}"
            Grid.Row="4" 
            Grid.RowSpan="2" 
            Grid.Column="1" 
            Margin="126,50,12,0" />

        <!--Add-Button-->
        <Button x:Name="AddTodoButton" 
            Content="add" 
            Click="AddTodo_Click"  
            Style="{StaticResource MyButtonStyle}"
            Grid.Row="5" 
            Grid.Column="1" 
            Margin="126,23,12,10" />

        <!--Kategorie auswählen-->
        <ComboBox x:Name="CategoryComboBox"
            Text="category"
            Grid.Row="4"
            Grid.Column="1"
            Grid.RowSpan="2"
            Margin="10,59,123,0"
            VerticalAlignment="Top"
            Style="{StaticResource MyComboBoxStyle}">
            <ComboBoxItem Content="School" />
            <ComboBoxItem Content="Private" />
        </ComboBox>

        <!--Priorität auswählen-->
        <ComboBox x:Name="PriorityComboBox"
            Text="priority"
            Grid.Row="5"
            Grid.Column="1"
            Margin="10,0,123,12"
            VerticalAlignment="Bottom"
            Style="{StaticResource MyComboBoxStyle}">
            <ComboBoxItem Content="High" />
            <ComboBoxItem Content="Medium" />
            <ComboBoxItem Content="Low" />
        </ComboBox>

        <!--Text-->
        <TextBlock 
            Text="to do" 
            HorizontalAlignment="Left" 
            Height="22" 
            Margin="11,46,0,0" 
            TextWrapping="Wrap" 
            VerticalAlignment="Top" 
            Width="35"/>

        <TextBlock 
            Text="done" 
            HorizontalAlignment="Right" 
            Height="22" 
            Margin="161,46,0,0" 
            TextWrapping="Wrap" 
            VerticalAlignment="Top" 
            Width="45" 
            Grid.Column="1"/>

        <TextBlock 
            Text="add new task"
            HorizontalAlignment="Left" 
            Height="22" Margin="12,43,0,0" 
            TextWrapping="Wrap" 
            VerticalAlignment="Top" 
            Width="100" 
            Grid.Row="4"/>

        <TextBlock 
            Text="double-click on a task to move it"
            HorizontalAlignment="Left" 
            Height="12" Margin="150,41,0,0" 
            TextWrapping="Wrap" 
            VerticalAlignment="Top" 
            Width="150" FontSize="10" 
            RenderTransformOrigin="0.4,0.395" Grid.ColumnSpan="2" Grid.Row="4"/>

    </Grid>

</UserControl>